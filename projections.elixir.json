{
  "lib/PROJECT_BASENAME_web/controllers/*.ex": {
    "type": "controller",
    "alternate": "test/{project|basename}_web/controllers/{}_test.exs",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot} do",
      "  use {project|basename|camelcase|capitalize}Web, :controller",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/controllers/*_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/controllers/{}.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot}Test do",
      "  use {project|basename|camelcase|capitalize}Web.ConnCase, async: true",
      "end"
    ]
  },

  "lib/PROJECT_BASENAME_web/live/*.ex": {
    "type": "live",
    "alternate": "test/{project|basename}_web/live/{}_test.exs",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot} do",
      "  use {project|basename|camelcase|capitalize}Web, :live_view",
      "",
      "  def render(assigns) do",
      "    ~H\"\"\"",
      "    \"\"\"",
      "  end",
      "end"
    ]
  },
  "test/PROJECT_BASENAME_web/live/*_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/live/{}.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot}Test do",
      "  use {project|basename|camelcase|capitalize}Web.ConnCase, async: true",
      "",
      "  import Phoenix.LiveViewTest",
      "",
      "  test \"\", %{open}conn: conn{close} do",
      "    {open}:ok, view, _html{close} = live(conn, ~p\"\")",
      "  end",
      "end"
    ]
  },

  "lib/PROJECT_BASENAME_web/components/*.ex": {
    "type": "component",
    "alternate": "test/{project|basename}_web/components/{}_test.exs",
    "related": "lib/{project|basename}_web/live/{}_live.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot} do",
      "  use Phoenix.Component",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/components/*_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/components/{}.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot}Test do",
      "  use ExUnit.Case, async: true",
      "",
      "  import Phoenix.LiveViewTest",
      "  import Phoenix.Component, only: [sigil_H: 2]",
      "  import {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot}",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/features/*_test.exs": {
    "type": "feature",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize|dot}Test do",
      "  use {project|basename|camelcase|capitalize}Web.FeatureCase, async: true",
      "end"
    ]
  },

  "lib/*.ex": {
    "type": "source",
    "alternate": "test/{}_test.exs",
    "template": [
      "defmodule {camelcase|capitalize|dot} do",
      "end"
    ]
  },

  "test/*_test.exs": {
    "type": "test",
    "alternate": "lib/{}.ex",
    "template": [
      "defmodule {camelcase|capitalize|dot}Test do",
      "  use ExUnit.Case, async: true",
      "",
      "  alias {camelcase|capitalize|dot}",
      "end"
    ]
  }
}
