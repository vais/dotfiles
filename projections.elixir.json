{
  "lib/PROJECT_BASENAME_web/controllers/*_controller.ex": {
    "type": "controller",
    "alternate": "test/{project|basename}_web/controllers/{}_controller_test.exs",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}Controller do",
      "  use {project|basename|camelcase|capitalize}Web, :controller",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/controllers/*_controller_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/controllers/{}_controller.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}ControllerTest do",
      "  use {project|basename|camelcase|capitalize}Web.ConnCase, async: true",
      "end"
    ]
  },

  "lib/PROJECT_BASENAME_web/live/*_live.ex": {
    "type": "live",
    "alternate": "test/{project|basename}_web/live/{}_live_test.exs",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}Live do",
      "  use {project|basename|camelcase|capitalize}Web, :live_view",
      "",
      "  def render(assigns) do",
      "    ~H\"\"\"",
      "    \"\"\"",
      "  end",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/live/*_live_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/live/{}_live.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}LiveTest do",
      "  use {project|basename|camelcase|capitalize}Web.ConnCase, async: true",
      "",
      "  import Phoenix.LiveViewTest",
      "",
      "  test \"renders\", %{open}conn: conn{close} do",
      "    {open}:ok, view, _html{close} = live(conn, ~p\"/{}\")",
      "  end",
      "end"
    ]
  },

  "lib/PROJECT_BASENAME_web/components/*_components.ex": {
    "type": "component",
    "alternate": "test/{project|basename}_web/components/{}_components_test.exs",
    "related": "lib/{project|basename}_web/live/{}_live.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}Components do",
      "  use Phoenix.Component",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/components/*_components_test.exs": {
    "type": "test",
    "alternate": "lib/{project|basename}_web/components/{}_components.ex",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}ComponentsTest do",
      "  use ExUnit.Case, async: true",
      "",
      "  import Phoenix.LiveViewTest",
      "  import Phoenix.Component, only: [sigil_H: 2]",
      "  import {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}Components",
      "end"
    ]
  },

  "test/PROJECT_BASENAME_web/features/*_test.exs": {
    "type": "feature",
    "template": [
      "defmodule {project|basename|camelcase|capitalize}Web.{camelcase|capitalize}Test do",
      "  use {project|basename|camelcase|capitalize}Web.FeatureCase, async: true",
      "end"
    ]
  },

  "lib/*.ex": {
    "type": "source",
    "alternate": "test/{}_test.exs",
    "template": [
      "defmodule {camelcase|capitalize|dot} do",
      "end"
    ]
  },

  "test/*_test.exs": {
    "type": "test",
    "alternate": "lib/{}.ex",
    "template": [
      "defmodule {camelcase|capitalize|dot}Test do",
      "  use ExUnit.Case, async: true",
      "",
      "  alias {camelcase|capitalize|dot}",
      "end"
    ]
  }
}
